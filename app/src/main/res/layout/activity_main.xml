<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/buttonWH"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_columnSpan="1"
            android:drawableLeft="@drawable/addimg"
            android:background="#00FFFFFF"
            android:text="Wecker HinzufÃ¼gen"
            android:textSize="12dp" />

        <Button
            android:id="@+id/buttonE"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_columnSpan="1"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/settingimg"
            android:text="Einstellungen"
            android:textSize="12dp"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/Uhrzeit"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="08:00"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Tag"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Freitag"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Fach"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Mathe"
            android:textAlignment="center"
            android:textSize="24dp" />


        <ToggleButton
            android:id="@+id/customtogglebutton"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_column="6"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/toggle_switch"
            android:textOff=""
            android:textOn="" />

    </GridLayout>

</LinearLayout>